{
  "$id": "tenant",
  "type": "object",
  "definitions": {
    "id": {
      "$ref": "common#/definitions/id"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "sanitize": "mongo"
    },
    "email": {
      "$ref": "common#/definitions/email"
    },
    "subdomain": {
      "$ref": "common#/definitions/subdomain"
    },
    "components": {
      "$ref": "tenant-components#/definitions/components"
    },
    "address": {
      "$ref": "common#/definitions/address"
    },
    "logo": {
      "$ref": "common#/definitions/logo"
    },
    "createdBy": {
      "$ref": "common#/definitions/createdBy"
    },
    "createdOn": {
      "$ref": "common#/definitions/createdOn"
    },
    "lastChangedBy": {
      "$ref": "common#/definitions/lastChangedBy"
    },
    "lastChangedOn": {
      "$ref": "common#/definitions/lastChangedOn"
    },
    "tenantSupport": {
      "type": "object",
      "nullable": true,
      "properties": {
        "supportEmail": {
          "type": "string",
          "format": "email",
          "sanitize": "mongo",
          "nullable": true,
          "transform": [
            "toLowerCase"
          ]
        },
        "supportPhone": {
          "type": "string",
          "sanitize": "mongo",
          "pattern": "^|\\+?([0-9] ?){9,14}[0-9]$",
          "nullable": true
        }
      }
    },
    "businessDetails": {
      "type": "object",
      "nullable": true,
      "properties": {
        "corporateName": {
          "type": "string",
          "sanitize": "mongo"
        },
        "website": {
          "type": "string",
          "sanitize": "mongo"
        },
        "rcs": {
          "type": "string",
          "sanitize": "mongo"
        },
        "capital": {
          "type": "number",
          "sanitize": "mongo"
        },
        "siret": {
          "type": "number",
          "sanitize": "mongo",
          "pattern": "^[0-9]{14}$"
        },
        "legalStatus": {
          "type": "string",
          "sanitize": "mongo"
        }
      }
    }
  }
}
